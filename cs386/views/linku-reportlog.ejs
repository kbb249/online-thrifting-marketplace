<!DOCTYPE html>
<html>
<head>
    <title>Report log</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <h1 class = "header-e">Report Log</h1>
    <% if (posts.length === 0) 
        { %>
            <p>No posts yet!</p>
        <% } 
        else { %>
            <% posts.forEach(post => { %>
                <div class="post">
                    <h2><%= post.title %></h2>
                    <p><strong>By:</strong> <%= post.author %> | <%= post.date %></p>
                    <p><%= post.content %></p>
                        <form action="/delete/<%= post.id %>" method="POST" style="display:inline;">
                            <button type="submit">Resolve Issue</button>
                        </form>
                </div>
        <% }) %>
    <% } %>
    <a href="/">‚Üê Back</a>
</body>
</html>
